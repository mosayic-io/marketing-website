---
interface Props {
	iosUrl?: string;
	androidUrl?: string;
	size?: 'small' | 'large';
}

const {
	iosUrl = '#',
	androidUrl = '#',
	size = 'large'
} = Astro.props;
---

<div class:list={['store-buttons', size]}>
	<a href={iosUrl} class="store-button" aria-label="Download on the App Store">
		<div class="button-inner">
			<svg class="store-icon apple-icon" viewBox="0 0 24 24" aria-hidden="true">
				<path fill="#A8A8A8" d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
			</svg>
			<div class="button-text">
				<span class="small-text">Download on the</span>
				<span class="large-text">App Store</span>
			</div>
		</div>
	</a>
	<a href={androidUrl} class="store-button" aria-label="Get it on Google Play">
		<div class="button-inner">
			<svg class="store-icon play-icon" viewBox="0 0 24 24" aria-hidden="true">
				<path fill="#4285F4" d="M3.61 1.76L13.85 12 3.61 22.24c-.41-.53-.61-1.22-.61-1.99V3.75c0-.77.2-1.46.61-1.99z"/>
				<path fill="#34A853" d="M17.16 8.7L4.63.46c-.35-.21-.74-.35-1.02-.3L13.85 12l3.31-3.3z"/>
				<path fill="#FBBC04" d="M17.16 15.3L13.85 12 3.61 22.24c.28.05.67-.09 1.02-.3l12.53-6.64z"/>
				<path fill="#EA4335" d="M21.39 10.25l-4.23-2.55L13.85 12l3.31 3.3 4.23-2.3c.75-.45 1.11-1.08 1.11-1.75s-.36-1.3-1.11-1.75z"/>
			</svg>
			<div class="button-text">
				<span class="small-text">Get it on</span>
				<span class="large-text">Google Play</span>
			</div>
		</div>
	</a>
</div>

<style>
	.store-buttons {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		justify-content: center;
	}

	.store-button {
		display: block;
		text-decoration: none;
		transition: transform var(--theme-transition), opacity var(--theme-transition);
	}

	.button-inner {
		display: flex;
		align-items: center;
		gap: 0.6rem;
		padding: 0.5rem 1rem 0.5rem 0.65rem;
		background: #fff;
		border: 1px solid #e0e0e0;
		border-radius: 0.5rem;
	}

	.store-button:hover {
		transform: translateY(-2px);
		opacity: 0.9;
	}

	.store-button:active {
		transform: translateY(0);
	}

	.store-icon {
		width: 1.75rem;
		height: 1.75rem;
		flex-shrink: 0;
	}

	.apple-icon {
		width: 1.5rem;
		height: 1.75rem;
	}

	.button-text {
		display: flex;
		flex-direction: column;
		text-align: left;
		line-height: 1.15;
	}

	.small-text {
		font-size: 0.5rem;
		color: #666;
		letter-spacing: 0.01em;
	}

	.large-text {
		font-size: 1rem;
		font-weight: 600;
		color: #333;
		font-family: var(--font-brand);
		letter-spacing: -0.01em;
	}

	/* Size variants */
	.small .button-inner {
		padding: 0.4rem 0.75rem 0.4rem 0.5rem;
		gap: 0.5rem;
	}

	.small .store-icon {
		width: 1.25rem;
		height: 1.5rem;
	}

	.small .apple-icon {
		width: 1.1rem;
		height: 1.35rem;
	}

	.small .small-text {
		font-size: 0.4rem;
	}

	.small .large-text {
		font-size: 0.8rem;
	}

	.large .button-inner {
		padding: 0.625rem 1.25rem 0.625rem 0.875rem;
		gap: 0.75rem;
	}

	.large .store-icon {
		width: 2rem;
		height: 2.25rem;
	}

	.large .apple-icon {
		width: 1.75rem;
		height: 2rem;
	}

	.large .small-text {
		font-size: 0.6rem;
	}

	.large .large-text {
		font-size: 1.2rem;
	}

	@media (min-width: 50em) {
		.store-buttons {
			justify-content: center;
		}
	}
</style>

---
interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title } = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="stack gap-3">
		<h1 class="title">{title}</h1>
		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		max-width: 50ch;
		margin-inline: auto;
	}

	.title {
		font-size: clamp(2rem, 6vw, 3.5rem);
		font-weight: 700;
		color: var(--gray-0);
		line-height: 1.1;
		letter-spacing: -0.02em;
	}

	.tagline {
		font-size: var(--text-lg);
		color: var(--gray-300);
		line-height: 1.5;
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: clamp(2.5rem, 5vw, 4rem);
		}

		.tagline {
			font-size: var(--text-xl);
		}
	}
</style>
